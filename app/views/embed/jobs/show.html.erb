<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="mb-6">
    <a href="<%= embed_jobs_path %>" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to all positions
    </a>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900 mb-3"><%= @job.title %></h1>
      <div class="flex flex-wrap gap-4 text-sm text-gray-600">
        <% if @job.department.present? %>
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <%= @job.department %>
          </span>
        <% end %>
        <% if @job.location.present? %>
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <%= @job.location %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="p-6">
      <div class="prose prose-sm max-w-none text-gray-700">
        <%= simple_format(@job.description) %>
      </div>
    </div>

    <div class="p-6 bg-gray-50 border-t border-gray-200">
      <a href="<%= embed_job_apply_path(@job.slug) %>" class="inline-flex items-center justify-center w-full sm:w-auto px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors">
        Apply for this position
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
